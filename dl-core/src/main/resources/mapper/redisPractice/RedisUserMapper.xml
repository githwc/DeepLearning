<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.core.redisPractice.mapper.RedisUserMapper">

    <select id="userPage" resultType="com.yc.core.redisPractice.entity.RedisUser">
        select
            *
        from redis_user u
        <where>
            u.del_flag = 0
            <if test="query.name != null and query.name != '' ">
                and u.name like concat ('%',#{query.name},'%')
            </if>
        </where>
        order by u.sort
    </select>
</mapper>
